@{
}

@{
	ViewData["Title"] = "Movie List";
}

@model List<Movie>
<!--table to dynamically display database-->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
			<td>Category ID</td>
			<td>Title</td>
			<td>Year</td>
			<td>Director</td>
			<td>Rating</td>
			<td>Edited</td>
			<td>Lent To</td>
			<td>Copied to Plex</td>
			<td>Notes</td>
        </tr>
    </thead>

	<!--loops through each row and puts each attribute in its own td-->
    @foreach (var x in Model)
    {
        <tbody>
            <tr>
				<td>@x.Category.CategoryName</td>
				<td>@x.Title</td>
				<td>@x.Year</td>
				<td>@x.Director</td>
				<td>@x.Rating</td>
				<td>@x.Edited</td>
				<td>@x.LentTo</td>
				<td>@x.CopiedToPlex</td>
				<td>@x.Notes</td>

				<!--buttons to edit and delete movies. Sends movie ID in the route so the next pages know which one it is-->
				<td><a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="EditMovie" asp-route-id="@x.MovieId">Edit</a></td>
				<td><a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="DeleteMovie" asp-route-id="@x.MovieId">Delete</a></td>
            </tr>
        </tbody>
    }
    
</table>